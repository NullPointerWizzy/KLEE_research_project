EXE = sudoku

all: build

build:
	@cd src && $(MAKE)
	@cd test && $(MAKE)
	@cp -f src/$(EXE) ./


report:
	@cd report && $(MAKE)	


clean:
	@cd src && $(MAKE) clean
	@cd test && $(MAKE) clean
	@cd report && $(MAKE) clean
	@rm -f $(EXE)

help:
	@echo "Usage:"
	@echo " make [all]\t\tBuild"
	@echo " make build\t\tBuild the software"
	@echo " make clean\t\tRemove all files generated by make"
	@echo " make help\t\tDisplay this help"

.PHONY: all build report clean help
